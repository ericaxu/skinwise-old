# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                          src.controllers.HtmlController.index()
GET        /product/1                 src.controllers.HtmlController.product()
GET        /ingredient/1              src.controllers.HtmlController.ingredient()
GET        /products                  src.controllers.HtmlController.products()
GET        /ingredients               src.controllers.HtmlController.ingredients()
GET        /profile                   src.controllers.HtmlController.profile()

# Ingredient API
GET        /api/ingredient/:id        src.controllers.api.IngredientController.info(id: Long)

# Product API
GET        /api/product/:id           src.controllers.api.ProductController.info(id: Long)

# User API
POST       /api/user/login            src.controllers.api.UserController.login()

# Admin console
GET        /admin                     src.controllers.AdminController.home()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file              controllers.Assets.at(path="/public", file)
