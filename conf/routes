# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                    src.controllers.HtmlController.index()
GET         /product/:product_id                 src.controllers.data.ProductController.info(product_id : Long)
GET         /ingredient/:ingredient_id           src.controllers.data.IngredientController.info(ingredient_id : Long)
GET         /products                            src.controllers.HtmlController.products()
GET         /ingredients                         src.controllers.HtmlController.ingredients()
GET         /profile                             src.controllers.HtmlController.profile()

# Ingredient API
GET         /api/ingredient                      src.controllers.data.IngredientController.api_info()
GET         /api/quicksearch/:query              src.controllers.IngredientSearch.partialSearch(query)
GET         /api/search/:query                   src.controllers.IngredientSearch.fullSearch(query)

# Product API
GET         /api/product                         src.controllers.data.ProductController.api_info()

# User API
POST        /api/user/signup                     src.controllers.UserController.api_signup()
POST        /api/user/login                      src.controllers.UserController.api_login()
POST        /api/user/logout                     src.controllers.UserController.api_logout()

# Feedback
POST        /api/feedback/report                 src.controllers.feedback.ReportController.api_report_create()
POST        /api/feedback/analytics              src.controllers.feedback.AnalyticsController.api_analytics()

# Admin console
GET         /admin                               src.controllers.admin.AdminController.home()
POST        /api/admin/import/ingredients        src.controllers.admin.AdminController.api_import_ingredients()
POST        /api/admin/import/products           src.controllers.admin.AdminController.api_import_products()

POST        /api/admin/user/byid                 src.controllers.admin.AdminUserController.api_user_by_id()
POST        /api/admin/user/byemail              src.controllers.admin.AdminUserController.api_user_by_email()
POST        /api/admin/user/update               src.controllers.admin.AdminUserController.api_user_update()
POST        /api/admin/user/setpass              src.controllers.admin.AdminUserController.api_user_set_password()
POST        /api/admin/user/delete               src.controllers.admin.AdminUserController.api_user_delete()

POST        /api/admin/group/byid                src.controllers.admin.AdminUserController.api_group_by_id()
POST        /api/admin/group/byname              src.controllers.admin.AdminUserController.api_group_by_name()
POST        /api/admin/group/update              src.controllers.admin.AdminUserController.api_group_update()
POST        /api/admin/group/delete              src.controllers.admin.AdminUserController.api_group_delete()

POST        /api/admin/ingredient/byid           src.controllers.admin.AdminIngredientController.api_ingredient_by_id()
POST        /api/admin/ingredient/update         src.controllers.admin.AdminIngredientController.api_ingredient_update()
POST        /api/admin/ingredient/approve        src.controllers.admin.AdminIngredientController.api_ingredient_approve()
POST        /api/admin/ingredient/delete         src.controllers.admin.AdminIngredientController.api_ingredient_delete()

POST        /api/admin/report/byid               src.controllers.admin.AdminReportController.api_report_byid()
POST        /api/admin/report/list               src.controllers.admin.AdminReportController.api_report_list()
POST        /api/admin/report/delete             src.controllers.admin.AdminReportController.api_report_delete()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                        controllers.Assets.at(path="/public", file)

# Not found
POST        /api/*route                          src.controllers.ErrorController.api_notfound(route)
GET         /*route                              src.controllers.ErrorController.notfound(route)
